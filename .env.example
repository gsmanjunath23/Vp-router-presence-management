# Mandatory
REDIS_HOST=redis
# REDIS_PASSWORD is not needed when Redis runs without authentication
# REDIS_PASSWORD=
REDIS_PORT=6381
SECRET_KEY=to-be-replaced

# Presence Management
PRESENCE_ENABLED=true
PRESENCE_TTL=120       # 120 seconds = 2 minutes offline detection (Discord-style)
PING_INTERVAL=40000    # 40 seconds = balanced ping interval

# DynamoDB Integration (replaces AWS IoT MQTT)
DYNAMODB_ENABLED=true
AWS_REGION=ap-northeast-1
NODE_ENV=production

# DynamoDB Table Names (environment-specific)
USERS_TABLE_DEV=Users-Dev
USERS_TABLE_TEST=Users-Test
USERS_TABLE_STAGE=Users-Stage
USERS_TABLE_PROD=Users-Prod

# AWS Credentials (required for local/non-EC2 servers)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Optional: Encryption key for additional security
ENCRYPTION_KEY=your-encryption-key-here
